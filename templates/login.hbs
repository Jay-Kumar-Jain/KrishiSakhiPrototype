<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Krishi Sakhi - Login</title>
  <link rel="stylesheet" href="/css/login-style.css"> <!-- ✅ Correct path -->
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="header-container">
      <div class="logo-section">
        <div class="logo-circle">
          <img src="/images/logo.png" alt="Krishi Sakhi Logo" class="logo-img"> <!-- ✅ Correct path -->
        </div>
        <span class="brand-title">KRISHI SAKHI</span>
      </div>
    </div>
  </header>

  <!-- Main -->
  <main class="main-container">
    <div class="login-card">
      <h2 class="main-title">Welcome Back</h2>
      <p class="subtitle">Please enter your details to login</p>

      <!-- Login Form -->
      <form class="login-form" method="POST" action="/login">
        <input type="text" name="phonenumber" placeholder="Phone Number (10 digits)" required />
        <input type="password" name="password" placeholder="Password" required />

        <!-- Options -->
        <div class="options">
          <label><input type="checkbox" /> Remember me</label>
          <a href="#">Forgot password?</a>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
      </form>

      <!-- Error Handling -->
      {{#if error}}
        <p class="error-msg">{{error}}</p>
      {{/if}}

      <!-- Signup Redirect -->
      <p class="signup-text">
        Don’t have an account?
        <a href="/signup" class="signup-link">Sign up</a>
      </p>
    </div>
  </main>
</body>
</html>
